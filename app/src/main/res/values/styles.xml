<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ucsdDarkBlue</item>
        <item name="colorPrimaryDark">@color/ucsdDarkBlue</item>
        <item name="colorAccent">@color/ucsdGold</item>
        <item name="colorButtonNormal">@color/ucsdGold</item>
        <item name="colorBackgroundFloating">@color/ucsdDarkBlue</item>
    </style>

    <style name="YouSeeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/ucsdDarkBlue</item>
    <item name="colorPrimaryDark">@color/ucsdDarkBlue</item>
    <item name="colorAccent">@color/ucsdGold</item>
    <item name="colorButtonNormal">@color/ucsdGold</item>
    <item name="colorBackgroundFloating">@color/ucsdBlue</item>
        <item name="actionMenuTextColor">@color/ucsdGold</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorAccent">@color/ucsdGold</item>
        <!--title-->
        <item name="android:textColor">#c7ac56</item>
        <!--text-->
        <item name="android:textColorPrimary">#fafafa</item>
        <!--selection list-->
        <item name="android:textColorTertiary">#fafafa</item>
        <!--background-->
        <item name="android:background">#5c8487</item>
    </style>

    <style name="BarStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="YSH_listingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:paddingStart">@dimen/text_padding</item>
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingEnd">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/SecondaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="thumbnail_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/colorCardBG</item>
        <item name="android:gravity">bottom</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
